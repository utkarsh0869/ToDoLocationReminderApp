<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    
                                                          
                 
                                   
                                                                                           
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".locationreminders.ReminderDescriptionActivity" android:tag="layout/activity_reminder_description_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/reminderTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:tag="binding_1"                 
            android:textSize="@dimen/text_size_large"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/reminderDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:tag="binding_2"                       
            android:textSize="20sp"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/reminderLocationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:tag="binding_3"                    
            android:textSize="20sp"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/reminderCoordinatesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="@dimen/text_size_large"
            android:tag="binding_4"                                                                          
            tools:text="@string/lat_long_snippet"/>

    </LinearLayout>
         